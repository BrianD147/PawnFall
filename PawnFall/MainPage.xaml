<Page
    x:Class="PawnFall.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PawnFall"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="rootGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!-- Set Viewbox to allow content to be resized as the window size is changed-->
        <Viewbox x:Name="vbChessboard" Stretch="Uniform" HorizontalAlignment="Center" Margin="120,60,20,20">
            <!-- Grid to hold chessboard -->
            <Grid x:Name="gChessboard" Height="280" Width="280" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Row0 -->
                <Rectangle Grid.Row="0" Grid.Column="0" Fill="Beige"/>
                <Rectangle Grid.Row="0" Grid.Column="1" Fill="LightGreen"/>
                <Rectangle Grid.Row="0" Grid.Column="2" Fill="Beige"/>
                <Rectangle Grid.Row="0" Grid.Column="3" Fill="LightGreen"/>
                <Rectangle Grid.Row="0" Grid.Column="4" Fill="Beige"/>
                <Rectangle Grid.Row="0" Grid.Column="5" Fill="LightGreen"/>
                <Rectangle Grid.Row="0" Grid.Column="6" Fill="Beige"/>
                <!-- Row1 -->
                <Rectangle Grid.Row="1" Grid.Column="0" Fill="LightGreen"/>
                <Rectangle Grid.Row="1" Grid.Column="1" Fill="Beige"/>
                <Rectangle Grid.Row="1" Grid.Column="2" Fill="LightGreen"/>
                <Rectangle Grid.Row="1" Grid.Column="3" Fill="Beige"/>
                <Rectangle Grid.Row="1" Grid.Column="4" Fill="LightGreen"/>
                <Rectangle Grid.Row="1" Grid.Column="5" Fill="Beige"/>
                <Rectangle Grid.Row="1" Grid.Column="6" Fill="LightGreen"/>
                <!-- Row2 -->
                <Rectangle Grid.Row="2" Grid.Column="0" Fill="Beige"/>
                <Rectangle Grid.Row="2" Grid.Column="1" Fill="LightGreen"/>
                <Rectangle Grid.Row="2" Grid.Column="2" Fill="Beige"/>
                <Rectangle Grid.Row="2" Grid.Column="3" Fill="LightGreen"/>
                <Rectangle Grid.Row="2" Grid.Column="4" Fill="Beige"/>
                <Rectangle Grid.Row="2" Grid.Column="5" Fill="LightGreen"/>
                <Rectangle Grid.Row="2" Grid.Column="6" Fill="Beige"/>
                <!-- Row3 -->
                <Rectangle Grid.Row="3" Grid.Column="0" Fill="LightGreen"/>
                <Rectangle Grid.Row="3" Grid.Column="1" Fill="Beige"/>
                <Rectangle Grid.Row="3" Grid.Column="2" Fill="LightGreen"/>
                <Rectangle Grid.Row="3" Grid.Column="3" Fill="Beige"/>
                <Rectangle Grid.Row="3" Grid.Column="4" Fill="LightGreen"/>
                <Rectangle Grid.Row="3" Grid.Column="5" Fill="Beige"/>
                <Rectangle Grid.Row="3" Grid.Column="6" Fill="LightGreen"/>
                <!-- Row4 -->
                <Rectangle Grid.Row="4" Grid.Column="0" Fill="Beige"/>
                <Rectangle Grid.Row="4" Grid.Column="1" Fill="LightGreen"/>
                <Rectangle Grid.Row="4" Grid.Column="2" Fill="Beige"/>
                <Rectangle Grid.Row="4" Grid.Column="3" Fill="LightGreen"/>
                <Rectangle Grid.Row="4" Grid.Column="4" Fill="Beige"/>
                <Rectangle Grid.Row="4" Grid.Column="5" Fill="LightGreen"/>
                <Rectangle Grid.Row="4" Grid.Column="6" Fill="Beige"/>
                <!-- Row5 -->
                <Rectangle Grid.Row="5" Grid.Column="0" Fill="LightGreen"/>
                <Rectangle Grid.Row="5" Grid.Column="1" Fill="Beige"/>
                <Rectangle Grid.Row="5" Grid.Column="2" Fill="LightGreen"/>
                <Rectangle Grid.Row="5" Grid.Column="3" Fill="Beige"/>
                <Rectangle Grid.Row="5" Grid.Column="4" Fill="LightGreen"/>
                <Rectangle Grid.Row="5" Grid.Column="5" Fill="Beige"/>
                <Rectangle Grid.Row="5" Grid.Column="6" Fill="LightGreen"/>
                <!-- Row6 -->
                <Rectangle Grid.Row="6" Grid.Column="0" Fill="Beige"/>
                <Rectangle Grid.Row="6" Grid.Column="1" Fill="LightGreen"/>
                <Rectangle Grid.Row="6" Grid.Column="2" Fill="Beige"/>
                <Rectangle Grid.Row="6" Grid.Column="3" Fill="LightGreen"/>
                <Rectangle Grid.Row="6" Grid.Column="4" Fill="Beige"/>
                <Rectangle Grid.Row="6" Grid.Column="5" Fill="LightGreen"/>
                <Rectangle Grid.Row="6" Grid.Column="6" Fill="Beige"/>
            </Grid>
        </Viewbox>
        <!-- Top bar background Rectangle -->
        <Rectangle x:Name="rectTopBar" VerticalAlignment="Top" Height="40" Margin="0, 0, 0, 0" Fill="DarkSlateGray" />
        <!-- Title text (PAWNFALL) -->
        <TextBlock x:Name="tblGameTitle" Foreground="White" HorizontalAlignment="Center" Text="P A W N F A L L" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="30"/>
        <!-- Side bar background Rectangle -->
        <Rectangle x:Name="rectSideBar" Width="100" HorizontalAlignment="Left" Margin="0, 40, 0, 0" Fill="DarkGray" />
        <!-- Menu logo -->
        <Rectangle Height="4" Width="20" Margin="10, 10, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="White"/>
        <Rectangle Height="4" Width="20" Margin="10, 18, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="White"/>
        <Rectangle Height="4" Width="20" Margin="10, 26, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="White"/>
        <!-- Menu button (Opacity set to 0 to be invisiable yet clickable) -->
        <Button x:Name="btnMenu" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="30" Margin="5, 5, 0, 0" Click="btnMenu_Click" Opacity="0"/>
    </Grid>
</Page>
